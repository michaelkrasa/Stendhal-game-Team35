			<argument value="10"></argument>
			<argument value="rat"></argument>
			<argument value="caverat"></argument>
			<argument value="razorrat"></argument>
			<argument value="venomrat"></argument>
			<argument value="zombie rat"></argument>
			<argument value="giantrat"></argument>
			<argument value="ratman"></argument>
			<argument value="ratwoman"></argument>
			<argument value="archrat"></argument>
		</condition>
	</achievement>

